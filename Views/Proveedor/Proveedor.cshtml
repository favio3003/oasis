
@{
    ViewBag.Title = "Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/21.2.4/css/dx.common.css" />
<link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/21.2.4/css/dx.light.css" />
<script src="https://cdn3.devexpress.com/jslib/21.2.4/js/dx.all.js"></script>


<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<div class="panel panel-container">
    <h2>Proveedor</h2>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div id="formGestion" class="container-fluid">
                    <div class="row">

                        <div class="col-lg-1 col-md-1 col-md-1">
                            <button id="btnNuevo" class="btn btn-secondary btn-sm rounded float-right" title="Adicionar">
                                <img src="~/Content/open-iconic/svg/plus.svg" alt="Adicionar">
                            </button>

                        </div>

                    </div>
                    <div class="demo-container">
                        <div id="gridProveedor"></div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <div class="modal fade " id="AgregarProveedor" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Proveedor</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>

                <div class="modal-body">


                    <div class="container">


                        <div class="col-md-12">
                            <div class="form-group-sm">
                                <label>Nombre:</label>
                                <input type="text" class="form-control" maxlength="500" placeholder="Nombre" id="txtNombre">
                            </div>
                        </div>



                        <div class="col-md-6">

                            <div class="form-group-sm">
                                <label>Direccion:</label>

                                <textarea type="text" class="form-control" maxlength="1000" placeholder="Direccion" id="txtDireccion" rows="3"></textarea>
                            </div>

                        </div>

                        <div class="col-md-6">

                            <div class="form-group-sm">
                                <label>Descripcion:</label>

                                <textarea type="text" class="form-control" maxlength="1500" placeholder="Descripcion" id="txtDescripcion" rows="3"></textarea>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="form-group-sm">
                                <label>Contacto:</label>
                                <input type="text" class="form-control" maxlength="15" placeholder="Contacto" id="txtContacto">
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group-sm">
                                <label>Teléfono:</label>
                                <input type="text" class="form-control" maxlength="8" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" placeholder="Teléfono" id="txtTelefono">

                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="form-group-sm">
                                <label>Celular:</label>
                                <input type="text" class="form-control" maxlength="8" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))" placeholder="Celular" id="txtCelular">

                            </div>

                        </div>


                        <div class="col-md-6">
                            <div class="form-group-sm">
                                <label>Dirección de correo electrónico:</label>
                                <input type="email" class="form-control" maxlength="100" placeholder="Dirección de correo electrónico" id="txtCorreo">
                            </div>

                        </div>
                        <div class="col-md-12">
                          <br />

                        </div>

                    </div>


                </div>
                <div class="modal-footer">
                    <button class="btn btn-bd-primary" id="btnGuardarProveedor">Guardar</button>
                    <button class="btn btn-bd-primary" id="btnEditarProveedor">Editar</button>
                    <button class="btn btn-bd-primary" id="btnImprimirProveedor">Imprimir</button>
                    <a id="btnCancelar" class="btn btn-bd-download" href="#"
                       data-dismiss="modal">Cancelar</a>
                </div>

            </div>
        </div>
    </div>




</div>





<style>
    .TablaCompleta:hover {
        background: #c4c0c0;
        cursor: pointer;
    }

    .TablaCompleta {
        width: 80%;
        border: #cacaca 1px solid;
    }


    .alinearcentro {
        text-align: center;
    }

    .alinearderecha {
        text-align: right;
    }
</style>

<script src="~/JS/Proveedor.js?v=1"></script>

